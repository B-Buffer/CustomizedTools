<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	
    <parent>
        <groupId>com.customized.tools</groupId>
        <artifactId>cst-parent</artifactId>
        <version>3.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>CustomizedTools</artifactId>
    <name>Customized Tools Build</name>
    <description>Customized Tools Build</description>
    
    <dependencies>
		<dependency>
		    <groupId>log4j</groupId>
		    <artifactId>log4j</artifactId>
		</dependency>
        <dependency>
           <groupId>com.customized.tools</groupId>
           <artifactId>cst-cli</artifactId>
        </dependency>
        <dependency>
           <groupId>com.customized.tools</groupId>
           <artifactId>cst-model</artifactId>
        </dependency>
        <dependency>
           <groupId>com.customized.tools</groupId>
           <artifactId>cst-core</artifactId>
        </dependency>
        <dependency>
           <groupId>com.customized.tools</groupId>
           <artifactId>cst-tda</artifactId>
        </dependency>
	    <dependency>
	       <groupId>com.mgmtp.gcviewer</groupId>
	       <artifactId>gcviewer</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jboss.modules</groupId>
            <artifactId>jboss-modules</artifactId>
        </dependency>
        <dependency>
			<groupId>javax.help</groupId>
			<artifactId>javahelp</artifactId>
		</dependency>

    </dependencies>
    
    <build>
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-assembly-plugin</artifactId>
					<configuration>
						<archiverConfig>
							<fileMode>0644</fileMode>
                            <directoryMode>0755</directoryMode>
                            <defaultDirectoryMode>0755</defaultDirectoryMode>
						</archiverConfig>
					</configuration>
				</plugin>
			</plugins>
        </pluginManagement>

        <plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
                <configuration>
					<descriptors>
                    	<descriptor>assembly/dist.xml</descriptor>
					</descriptors>
                    <archive>
                    	<addMavenDescriptor>false</addMavenDescriptor>
                    </archive>
				</configuration>
                <executions>
                	<execution>
                    	<id>create-assemblies</id>
                        <phase>package</phase>
                        <goals>
                        	<goal>single</goal>
                        </goals>
                    </execution>
                </executions>
			</plugin>
		</plugins>
    </build>
    
	
</project>
